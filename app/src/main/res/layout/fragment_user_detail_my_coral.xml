<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a4a52"
    android:fillViewport="true"
    tools:context=".presentation.fragments.user.UserDetailMyCoralFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Coral Name Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CORAL NAME"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_coral_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karangia"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/iv_coral_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPECIES NAME"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_species_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stylophora madagascarensis"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="serif" />

        </LinearLayout>

        <!-- Planter Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLANTER"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/iv_planter_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_planter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paul Sniders"
                android:textColor="#4DD0E1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_planter_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email : PaulSniders@gmail.com"
                android:textColor="#4DD0E1"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_planter_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone : 081234567890"
                android:textColor="#4DD0E1"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Place Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLACE"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp" />

            <!-- Google Maps Fragment Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp">

                <fragment
                    android:id="@+id/map_fragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jl. Melasti Ungasan, Ungasan, Kec. Kuta Sel., Kabupaten Badung, Bali 80361"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Coral ID Card Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CORAL ID CARD"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#4DD0E1"
                    android:padding="20dp">

                    <!-- Left side - Form fields -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Coral Name Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="Karangia"
                                android:textColor="#1a4a52"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:background="#26a69a"
                                android:padding="6dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Coral ID Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="CoralID"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:background="#1a4a52"
                                android:padding="6dp"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tv_coral_id"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1234567890"
                                android:textColor="#1a4a52"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:background="#FFFFFF"
                                android:padding="6dp"
                                android:layout_marginStart="2dp" />

                        </LinearLayout>

                        <!-- DOP Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="DOP"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:background="#1a4a52"
                                android:padding="6dp"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tv_dop"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="12-12-2003"
                                android:textColor="#1a4a52"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:background="#FFFFFF"
                                android:padding="6dp"
                                android:layout_marginStart="2dp" />

                        </LinearLayout>

                        <!-- Species Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="Species"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:background="#1a4a52"
                                android:padding="6dp"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tv_id_species"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Stylophora madagascarensis"
                                android:textColor="#1a4a52"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:background="#FFFFFF"
                                android:padding="6dp"
                                android:layout_marginStart="2dp" />

                        </LinearLayout>

                        <!-- Place Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="Place"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:background="#1a4a52"
                                android:padding="6dp"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tv_id_place"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Pantai pandawa, Bali"
                                android:textColor="#1a4a52"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:background="#FFFFFF"
                                android:padding="6dp"
                                android:layout_marginStart="2dp" />

                        </LinearLayout>

                        <!-- Coordinate Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="Coordinate"
                                android:textColor="#FFFFFF"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:background="#1a4a52"
                                android:padding="6dp"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tv_coordinates"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="lat: 48.8583701, lng:2.2944813"
                                android:textColor="#1a4a52"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:background="#FFFFFF"
                                android:padding="6dp"
                                android:layout_marginStart="2dp" />

                        </LinearLayout>

                        <!-- Owner Info -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OWNER"
                            android:textColor="#1a4a52"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_owner_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textColor="#1a4a52"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/tv_owner_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JohnDoe@gmail.com"
                            android:textColor="#1a4a52"
                            android:textSize="10sp"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/tv_owner_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="081234567890"
                            android:textColor="#1a4a52"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <!-- Right side - Coral image and decorations -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="16dp">

                        <!-- Decorative coral icons -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_coral_logo"
                            app:tint="#1A4A52"
                            android:layout_marginBottom="8dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:id="@+id/iv_id_coral_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                />

                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_coral_logo"
                            android:layout_marginTop="8dp"
                            app:tint="#1a4a52" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Back Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="BACK"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#F44336"
                android:letterSpacing="0.1" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>