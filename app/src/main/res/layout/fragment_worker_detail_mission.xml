<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A4A52"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".presentation.fragments.worker.WorkerDetailMissionFragment">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background=""
            android:src="@drawable/ic_person"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Hi, DIVER"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="normal" />

    </LinearLayout>

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tv_coral_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coral Name"
                android:textColor="#333333"
                android:textSize="24sp"
                android:textStyle="normal"
                android:layout_marginBottom="24dp" />

            <!-- Coral Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/iv_coral_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src=""
                    tools:src="" />

            </androidx.cardview.widget.CardView>

            <!-- Coral Species -->
            <TextView
                android:id="@+id/tv_coral_species"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CORAL Species"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Owner Label -->
            <TextView
                android:id="@+id/tv_owner_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of the owner"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Owner Name -->
            <TextView
                android:id="@+id/tv_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cinthya"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="8dp">

        <!-- Next Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btn_next"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#4EF8BF"
                android:backgroundTint="#4EF8BF"
                android:elevation="0dp"
                android:text="NEXT"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <!-- Back Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FF4757"
                android:text="BACK"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="0dp"
                style="?android:attr/borderlessButtonStyle" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>