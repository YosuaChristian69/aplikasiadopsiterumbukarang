<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2C5F6B"
    tools:context=".presentation.fragments.user.UserSelectSpeciesFragment">

    <!-- Header Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CORAL SELECTION"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="40dp"
        android:paddingBottom="30dp"
        android:letterSpacing="0.1" />

    <!-- Coral Species Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:gravity="center_vertical">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <!-- First Coral Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCoral1"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivCoral1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="" />

                    <TextView
                        android:id="@+id/tvCoralSpecies1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="CORAL SPECIES"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="#4FFFB3"
                        android:letterSpacing="0.05" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second Coral Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCoral2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivCoral2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="" />

                    <TextView
                        android:id="@+id/tvCoralSpecies2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="CORAL SPECIES"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="#4FFFB3"
                        android:letterSpacing="0.05" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Third Coral Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCoral3"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivCoral3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="" />

                    <TextView
                        android:id="@+id/tvCoralSpecies3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="CORAL SPECIES"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="#4FFFB3"
                        android:letterSpacing="0.05" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Fourth Coral Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCoral4"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivCoral4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="" />

                    <TextView
                        android:id="@+id/tvCoralSpecies4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="CORAL SPECIES"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="#4FFFB3"
                        android:letterSpacing="0.05" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp"
        android:paddingVertical="30dp"
        android:gravity="center">

        <!-- Back Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="BACK"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#F81616"
            android:layout_marginEnd="20dp"
            android:letterSpacing="0.1" />

        <!-- Select Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSelect"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="SELECT"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#4EF8BF"
            android:layout_marginStart="20dp"
            android:letterSpacing="0.1" />

    </LinearLayout>

</LinearLayout>