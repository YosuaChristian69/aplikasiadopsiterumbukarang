<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light">

        <LinearLayout
            android:id="@+id/toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_teal"
            android:orientation="horizontal"
            android:padding="16dp"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:contentDescription="Back"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Add New Place"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- Search Box -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/search_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/toolbar_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/text_secondary" />

                <EditText
                    android:id="@+id/et_search_places"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search places..."
                    android:textSize="14sp"
                    android:textColorHint="@color/text_secondary"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    android:inputType="text" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ScrollView to accommodate all content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/search_card"
            app:layout_constraintBottom_toTopOf="@id/bottom_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <!-- Google Maps Container -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/map_card"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E0E0E0">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Map Fragment Container -->
                        <FrameLayout
                            android:id="@+id/map_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#E0E0E0">

                            <!-- Placeholder text for when map is not loaded -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Loading Google Maps..."
                                android:textColor="#757575"
                                tools:ignore="HardcodedText" />

                        </FrameLayout>

                        <!-- Address Overlay -->
                        <LinearLayout
                            android:id="@+id/address_overlay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="@drawable/bg_overlay_gradient"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Selected Location"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tv_selected_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:maxLines="2"
                                android:ellipsize="end"
                                tools:text="Jl. Tunjungan No.1, Genteng, Kec. Genteng, Kota Surabaya, Jawa Timur" />

                        </LinearLayout>

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Description Input Section -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/description_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E0E0E0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Description Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_description"
                                android:layout_marginEnd="8dp"
                                app:tint="@color/primary_teal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Place Description"
                                android:textColor="@color/primary_teal"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" *"
                                android:textColor="#F44336"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Description Input Container -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/primary_teal"
                            app:boxStrokeWidth="2dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:hintTextColor="@color/primary_teal"
                            app:counterEnabled="true"
                            app:counterMaxLength="500"
                            app:counterTextColor="@color/text_secondary"
                            app:helperText="Describe what makes this place special or important"
                            app:helperTextTextColor="@color/text_secondary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter place description..."
                                android:inputType="textMultiLine|textCapSentences"
                                android:maxLines="4"
                                android:minLines="3"
                                android:maxLength="500"
                                android:gravity="top|start"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:textColorHint="@color/text_secondary"
                                android:scrollbars="vertical"
                                android:overScrollMode="always"
                                android:scrollbarStyle="insideInset" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Description Guidelines -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="8dp"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’¡ Tips for a good description:"
                                android:textColor="@color/primary_teal"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="â€¢ Mention what type of place it is\nâ€¢ Include notable features or landmarks\nâ€¢ Add any special significance or memories"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:lineSpacingExtra="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

        <!-- Bottom Container for Add Button -->
        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Add Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_place"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Add Place"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:backgroundTint="@color/primary_teal"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_add"
                app:iconTint="@android:color/white"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                android:enabled="false"
                android:alpha="0.6"
                app:rippleColor="@android:color/white"
                android:letterSpacing="0.02" />

        </LinearLayout>

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminateTint="@color/primary_teal" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>