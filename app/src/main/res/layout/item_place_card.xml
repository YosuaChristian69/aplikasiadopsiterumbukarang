<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Section with Coral Icon -->
        <androidx.cardview.widget.CardView
            android:id="@+id/iconCard"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#4CDDCF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_location_on"
                app:tint="#1a4d52" />
        </androidx.cardview.widget.CardView>

        <!-- Place Name -->
        <TextView
            android:id="@+id/tv_place_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="Manta Point"
            android:textColor="#1a4d52"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@+id/iconCard"
            app:layout_constraintTop_toTopOf="@+id/iconCard"
            app:layout_constraintEnd_toStartOf="@+id/actionButtonsLayout" />

        <!-- Place ID -->
        <TextView
            android:id="@+id/tv_place_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="ID: 1"
            android:textColor="#7B8794"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@+id/iconCard"
            app:layout_constraintTop_toBottomOf="@+id/tv_place_name"
            app:layout_constraintEnd_toStartOf="@+id/actionButtonsLayout" />

        <!-- Action Buttons Layout -->
        <LinearLayout
            android:id="@+id/actionButtonsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iconCard"
            app:layout_constraintBottom_toBottomOf="@+id/iconCard">

            <!-- Edit Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_edit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="18dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#2a6e73">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit"
                    app:tint="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <!-- Delete Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_delete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="18dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#FF5252">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_delete"
                    app:tint="#FFFFFF" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Description Section -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Famous dive site with frequent manta ray sightings and vibrant coral formations"
            android:textColor="#455A64"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/iconCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Coordinates Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/coordinatesCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E8F5F3"
            app:layout_constraintTop_toBottomOf="@+id/tv_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Database Coordinates -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Database Coordinates"
                    android:textColor="#2a6e73"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Latitude"
                            android:textColor="#7B8794"
                            android:textSize="10sp"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/tv_latitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-8.7654300"
                            android:textColor="#1a4d52"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Longitude"
                            android:textColor="#7B8794"
                            android:textSize="10sp"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/tv_longitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="115.2345670"
                            android:textColor="#1a4d52"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#B8E6E1"
                    android:layout_marginVertical="8dp" />

                <!-- Precise Location Section (Enhanced) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header for Precise Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Precise Location"
                            android:textColor="#2a6e73"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <!-- Enhanced View on Maps Button -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_view_maps"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="3dp"
                            app:cardBackgroundColor="#4CDDCF"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_map"
                                app:tint="#1a4d52" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Location Display with Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="#FFFFFF"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location_on"
                            app:tint="#4CDDCF"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tv_precise_coordinates"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading precise location..."
                            android:textColor="#455A64"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:lineSpacingExtra="2dp" />

                        <!-- Loading indicator (optional) -->
                        <ProgressBar
                            android:id="@+id/location_progress"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="8dp"
                            android:indeterminateTint="#4CDDCF"
                            android:visibility="gone"
                            style="?android:attr/progressBarStyleSmall" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Population Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_background"
            android:backgroundTint="#4CDDCF"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            app:layout_constraintTop_toBottomOf="@+id/coordinatesCard"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_eco"
                app:tint="#1a4d52"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tv_population_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Population: 0"
                android:textColor="#1a4d52"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>