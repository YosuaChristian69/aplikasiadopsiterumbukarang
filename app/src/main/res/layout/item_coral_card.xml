<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="#2a6e73"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardMaxElevation="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Coral image area with enhanced styling -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#1a4d52">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_background"
                android:alpha="0.7" />

            <!-- Coral image - will be loaded by Glide in adapter -->
            <ImageView
                android:id="@+id/ivCoralImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_coral_logo"
                android:alpha="0.9" />

        </androidx.cardview.widget.CardView>

        <!-- Coral name with enhanced styling -->
        <TextView
            android:id="@+id/tvCoralName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue Coral"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Coral type with enhanced styling -->
        <TextView
            android:id="@+id/tvCoralType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard Coral"
            android:textColor="#B0E0E6"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Price and Stock information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Price information -->
            <TextView
                android:id="@+id/tvCoralPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rp 150,000"
                android:textColor="#4CDDCF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- Stock information -->
            <TextView
                android:id="@+id/tvCoralStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock: 10"
                android:textColor="#4CDDCF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- Optional action buttons area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:visibility="gone">

            <!-- You can add action buttons here if needed -->
            <!-- Example: Edit, Delete buttons -->

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>