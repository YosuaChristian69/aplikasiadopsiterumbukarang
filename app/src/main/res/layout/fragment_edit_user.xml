<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coral_header_gradient"
    tools:context=".presentation.fragments.EditUserFragment">

    <!-- Animated Wave Background -->
    <ImageView
        android:id="@+id/waveBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/wave_pattern"
        android:scaleType="centerCrop"
        android:alpha="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="50dp"
        android:paddingEnd="20dp"
        android:paddingBottom="30dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Enhanced Back Button with Ripple Effect -->
        <androidx.cardview.widget.CardView
            android:id="@+id/backCard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="25dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                android:scaleType="center"
                app:tint="#1a4d52" />
        </androidx.cardview.widget.CardView>

        <!-- Enhanced Title with Ocean Theme -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/backCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/backCard"
            app:layout_constraintBottom_toBottomOf="@+id/backCard">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤ Edit User"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:shadowColor="#4C1a4d52"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:letterSpacing="0.05" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage user account information"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-light" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Loading Indicator with Coral Theme -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loadingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loading_background"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/loadingIndicator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="#4CDDCF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updating user..."
            android:textColor="#1a4d52"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/loadingIndicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Enhanced Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="32dp">

            <!-- Enhanced Form Card with Ocean Theme -->
            <androidx.cardview.widget.CardView
                android:id="@+id/formCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <!-- Enhanced Form Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/user_info_header_bg"
                        android:padding="16dp"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="User Information"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1a4d52"
                            android:fontFamily="sans-serif-medium" />



                    </LinearLayout>

                    <!-- User ID Display (Read Only) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#F8FFFE">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_id_card"
                                app:tint="#4CDDCF"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="User ID"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:fontFamily="sans-serif-light" />

                                <TextView
                                    android:id="@+id/userIdText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#001"
                                    android:textSize="16sp"
                                    android:textColor="#1a4d52"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Full Name Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fullNameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:hint="ðŸ‘¤ Full Name"
                        app:boxStrokeColor="#4CDDCF"
                        app:hintTextColor="#1a4d52"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="#4CDDCF"
                        app:endIconMode="clear_text"
                        app:endIconTint="#4CDDCF"
                        app:boxStrokeWidth="2dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fullNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords"
                            android:textColor="#1a4d52"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email Input -->
                    <!-- Ganti Email Input section di fragment_edit_user.xml dengan ini -->

                    <!-- Email Display (Read Only) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#F8FFFE">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_email"
                                app:tint="#4CDDCF"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ“§ Email Address"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:fontFamily="sans-serif-light" />

                                <TextView
                                    android:id="@+id/emailEditText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="user@example.com"
                                    android:textSize="16sp"
                                    android:textColor="#1a4d52"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Password Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passwordInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:hint="ðŸ”’ Password"
                        app:boxStrokeColor="#4CDDCF"
                        app:hintTextColor="#1a4d52"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="#4CDDCF"
                        app:endIconMode="password_toggle"
                        app:endIconTint="#4CDDCF"
                        app:boxStrokeWidth="2dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/passwordEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="#1a4d52"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/statusInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:hint="âš¡ Role"
                        app:boxStrokeColor="#4CDDCF"
                        app:hintTextColor="#1a4d52"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:startIconDrawable="@drawable/ic_status"
                        app:startIconTint="#4CDDCF"
                        app:endIconMode="dropdown_menu"
                        app:endIconTint="#4CDDCF"
                        app:boxStrokeWidth="2dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/statusDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="#1a4d52"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:focusable="false"
                            android:clickable="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Balance Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/balanceInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:hint="ðŸ’° Balance"
                        app:boxStrokeColor="#4CDDCF"
                        app:hintTextColor="#1a4d52"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:startIconDrawable="@drawable/ic_money"
                        app:startIconTint="#4CDDCF"
                        app:endIconMode="clear_text"
                        app:endIconTint="#4CDDCF"
                        app:boxStrokeWidth="2dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/balanceEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textColor="#1a4d52"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- User Status Dropdown -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/userStatusInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="28dp"
                        android:hint="ðŸ‘¥ User Status"
                        app:boxStrokeColor="#4CDDCF"
                        app:hintTextColor="#1a4d52"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:startIconDrawable="@drawable/ic_user_role"
                        app:startIconTint="#4CDDCF"
                        app:endIconMode="dropdown_menu"
                        app:endIconTint="#4CDDCF"
                        app:boxStrokeWidth="2dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/userStatusDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="#1a4d52"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:focusable="false"
                            android:clickable="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Join Date Display (Read Only) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#F8FFFE">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="#4CDDCF"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Member Since"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:fontFamily="sans-serif-light" />

                                <TextView
                                    android:id="@+id/joinedAtText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2024-01-15 08:30:00"
                                    android:textSize="16sp"
                                    android:textColor="#1a4d52"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Enhanced Action Buttons with Ocean Theme -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/formCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/updateButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="Update User"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="0.02"
                    app:backgroundTint="#4CDDCF"
                    app:cornerRadius="20dp"
                    app:elevation="12dp"
                    app:icon="@drawable/ic_save"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:rippleColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.75"
                    android:layout_marginStart="12dp"
                    android:text="Cancel"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1a4d52"
                    android:letterSpacing="0.02"
                    app:backgroundTint="#F0F0F0"
                    app:cornerRadius="20dp"
                    app:elevation="12dp"
                    app:icon="@drawable/ic_cancel"
                    app:iconTint="#1a4d52"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:rippleColor="#1a4d52"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>